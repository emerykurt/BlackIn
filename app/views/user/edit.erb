<h1>User Sign Up</h1>
<br>
<br>
<form method="PATCH" action="/user/<%= @user.id %>">
    <input type="hidden" name="_method" value="PATCH">

<label>First Name:</label>
<input type="text" name="user[first_name]" value="<%= @user.first_name %>"/><br/>
<label>Last Name:</label>
<input type="text" name="user[last_name]" value="<%= @user.last_name %>"/><br/>
<label>Email:</label>
<input type="email" name="user[email]" value="<%= @user.email %>"/><br/>
<br/>

<input type="submit" value="submit"/><br>
<br>
</form>